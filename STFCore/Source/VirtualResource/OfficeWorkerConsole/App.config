<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <log4net>
    <appender name="LogFile" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="Logs/%property{InstanceId}-%property{ProcessId}.log"/>
      <staticLogFileName value="true"/>
      <appendToFile value="false"/>
      <preserveLogFileNameExtension value="true"/>
      <maxSizeRollBackups value="50"/>
      <maximumFileSize value="1048576"/>
      <rollingStyle value="Size"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} [%property{charlevel}] &lt;%thread&gt; %class{1}::%method::%message%newline"/>
      </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} [%property{charlevel}] &lt;%thread&gt; %class{1}::%method::%message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="LogFile"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
    <logger name="HP.DeviceAutomation" additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="LogFile"/>
      <appender-ref ref="ConsoleAppender"/>
    </logger>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6" />
  </startup>
</configuration>
